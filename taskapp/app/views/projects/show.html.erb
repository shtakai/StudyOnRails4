<h1><%= @project.title %></h1>

<ul>
	<% @project.tasks.each do |task| %>
	<li>
		<%= task.title %>
		<%= link_to "[delete]", project_task_path(task.project_id, task.id), method: :delete, data: {confirm:"消していいん？"} %>
	</li>
	<% end %>
	<li>
		<%= form_for [@project, @project.tasks.build] do |f| %>
		<%= f.text_field :title %>
		<%= f.submit %>
		<% end %>
	</li>
</ul>
